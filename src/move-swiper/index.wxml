<!--miniprogram_npm/lazyui-miniprogram/move-swiper/index.wxml-->
<view class='test' style="height:{{swiperH}}">
  <swiper display-multiple-items='1' circular previous-margin='50px' next-margin='50px' bindchange='change' current='{{current}}' indicator-dots="true">
    <block wx:for="{{imgUrls}}" wx:key='{{index}}'>
      <swiper-item>
        <view class="box front" data-index='{{index}}' animation="{{index == current?animationData:animationData2}}">
          <image src='{{item}}'></image>
          <view class='content'>
            <text>《阿丽塔 · 战斗天使》</text>
            <text>·20180521·</text>
          </view>
        </view>
        <view class="box back">
          <image src='{{item}}'></image>
          <view class='content'>
            <text>《阿丽塔 · 战斗天使》</text>
            <text>·20180521·</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>
  
</view>