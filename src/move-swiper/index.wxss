.test{
  width: 100%;
  box-sizing: border-box;
}
swiper{
  height: 100%;
}
.content{
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: #fff;
  text-align: center;
  padding-bottom: 40rpx;
}

swiper-item{
  text-align: center;
}

swiper-item image{
  width: 100%;
  height: 100%
}

.box{
  width: 90%;
  height: 100%;
  display: inline-block;
  margin-top: 40px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #eee;
  position:relative;
  top:33%;
  transform:translateY(-45%);
  overflow: hidden
}

.front{
  border: 1px solid #333;
  font-size: 18px;
  background:rgba(255,192,203,0.4);
}

.back{
  backface-visibility: hidden;
  transform: rotateY(180deg);
  padding: 20rpx;
  background: #fff;
}

.flip:hover .box{
    transform:rotateY(180deg);
  }   
.flip{
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  transition: all 1s ease;
  transform-style: preserve-3d;
}